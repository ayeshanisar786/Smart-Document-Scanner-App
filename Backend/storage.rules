rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isPremium() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isPremium == true;
    }

    function validFileSize() {
      return request.resource.size < 10 * 1024 * 1024; // Max 10MB
    }

    // ============================================
    // USER DOCUMENTS
    // ============================================

    match /users/{userId}/documents/{allPaths=**} {
      // Users can only access their own files
      allow read: if isOwner(userId);

      // Can upload if authenticated and file size is valid
      allow create: if isOwner(userId) && validFileSize();

      allow delete: if isOwner(userId);
    }

    // ============================================
    // USER THUMBNAILS
    // ============================================

    match /users/{userId}/thumbnails/{allPaths=**} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && validFileSize();
      allow delete: if isOwner(userId);
    }

    // ============================================
    // PREMIUM CLOUD BACKUP (Premium users only)
    // ============================================

    match /premium/{userId}/{allPaths=**} {
      allow read, write: if isOwner(userId) && isPremium();
    }
  }
}
